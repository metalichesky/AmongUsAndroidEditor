<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:scaleType="centerCrop"-->
<!--        app:srcCompat="@drawable/ic_menu_background" />-->

    <com.metalichecky.amonguseditor.ui.SpaceBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/colorTextWhite"
            android:textSize="38sp" />

        <LinearLayout
            android:id="@+id/llMenuItemsContainer"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:layout_weight="1"
            android:minWidth="250dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnOpenEditor"
                style="@style/MenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:text="@string/mainMenuOpenEditor" />

            <Button
                android:id="@+id/btnOpenGame"
                style="@style/MenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:text="@string/mainMenuOpenGame" />

            <Button
                android:id="@+id/btnOpenAbout"
                style="@style/MenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/mainMenuAbout" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="12dp"
            >

            <TextView
                android:id="@+id/tvAppVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/app_version"
                />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>