<resources>
    <!-- Splash Theme-->
    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/drawable_launch_screen</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MenuButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>

    <style name="ItemCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/colorItemBackground</item>
    </style>

    <style name="MessageDialogCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextBannerCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MessageDialogStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/MessageDialogAnimation</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MessageDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_message_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_message_dialog_out</item>
    </style>

</resources>